{
  "name": "ion/framework",
  "description": "Lightweight PHP framework",
  "type": "project",
  "autoload": {
    "psr-4": {
      "core\\": "core/",
      "app\\": "app/"
    }
  },
  "require": {
    "php": "^8.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "scripts": {
    "test": "phpunit"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
